{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": 0, // warn about console (don't error in POC)
        "no-unused-vars": 1, // error - helps clean code
        "no-underscore-dangle": 0, // allow Mongo-like `_id`
        "no-undef": 2, // error - critical bug catcher
        "import/no-extraneous-dependencies": 1 // warn - track dependencies better
    }
}